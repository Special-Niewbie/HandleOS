    <Style x:Key="PS5LoginButton" TargetType="CheckBox">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="Circle1" RepeatBehavior="Forever" BeginTime="0:0:1" FillBehavior="Stop">
                            <DoubleAnimation Storyboard.TargetName="CircleBorder1" Storyboard.TargetProperty="Width" From="100" To="300" Duration="0:0:1.5"/>
                            <DoubleAnimation Storyboard.TargetName="CircleBorder1" Storyboard.TargetProperty="Height" From="100" To="300" Duration="0:0:1.5"/>
                            <DoubleAnimation Storyboard.TargetName="CircleBorder1" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="CircleBorder1" Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="0:0:0.2" Duration="0:0:1.3"/>
                        </Storyboard>
                        <Storyboard x:Key="Circle2" RepeatBehavior="Forever" BeginTime="0:0:1.5" FillBehavior="Stop">
                            <DoubleAnimation Storyboard.TargetName="CircleBorder2" Storyboard.TargetProperty="Width" From="100" To="300" Duration="0:0:1.5"/>
                            <DoubleAnimation Storyboard.TargetName="CircleBorder2" Storyboard.TargetProperty="Height" From="100" To="300" Duration="0:0:1.5"/>
                            <DoubleAnimation Storyboard.TargetName="CircleBorder2" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetName="CircleBorder2" Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="0:0:0.2" Duration="0:0:1.3"/>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Grid x:Name="AnimIntroLogo" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border x:Name="CircleBorder1" BorderThickness="5" BorderBrush="White" CornerRadius="250" Width="0" Height="0" Opacity="0"/>
                        <Border x:Name="CircleBorder2" BorderThickness="5" BorderBrush="White" CornerRadius="250" Width="0" Height="0" Opacity="0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Grid.Loaded">
                            <BeginStoryboard Storyboard="{StaticResource Circle1}"/>
                            <BeginStoryboard Storyboard="{StaticResource Circle2}"/>
                        </EventTrigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                <Setter Property="IsChecked" Value="True"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

