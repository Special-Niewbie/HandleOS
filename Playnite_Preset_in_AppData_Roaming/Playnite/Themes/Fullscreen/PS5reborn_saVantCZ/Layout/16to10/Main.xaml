<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type Main}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Main}">
                    <Grid x:Name="PART_MainHost" Background="Black"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignIntance}">
                        <Image x:Name="PS5DefaultImageNoVideo" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/Background/PS5Background.png'}" RenderOptions.BitmapScalingMode="Fant"/>
                        <Grid x:Name="PART_ViewHost">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Resources>
                                        <Storyboard x:Key="FlashStart">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0" Duration="0:0:1"/>
                                        </Storyboard>
                                    </Style.Resources>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=LoginButton, Path=IsChecked}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard Storyboard="{StaticResource FlashStart}"/>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <Grid x:Name="PS5Background">
                                <!--MediaElement MediaElementBehaviors.Repeat="True" UnloadedBehavior="Stop" Source="{ThemeFile 'Videos/LoopNoParticles.mp4'}">
                                    <MediaElement.CacheMode>
                                        <BitmapCache RenderAtScale="1"/>
                                    </MediaElement.CacheMode>
                                    <MediaElement.Style>
                                        <Style TargetType="MediaElement">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                    <Setter Property="MediaElement.Source" Value=" "/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=PS5DefaultImage, Path=Opacity}" Value="1">
                                                    <Setter Property="MediaElement.Source" Value=" "/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MediaElement.Style>
                                </MediaElement-->
                                <Image x:Name="PS5DefaultImage" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/Background/PS5Games.png'}" RenderOptions.BitmapScalingMode="Fant">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Settings Fullscreen.EnableMainBackgroundImage}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Setter Property="Opacity" Value="0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=LoginButton, Path=IsChecked}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard FillBehavior="Stop">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0" BeginTime="0:0:0" Duration="0:0:2.5"/>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:2.5" Duration="0:0:0.4"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Grid>

                            <!--Game Background-->

                            <Grid x:Name="GameBackground">
                                <FadeImage x:Name="PART_ImageBackground" SourceUpdateDelay="300" Tag="{DynamicResource ExplorePanel}" >
                                    <FadeImage.Style>
                                        <Style TargetType="FadeImage">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=LoginButton, Path=IsChecked}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard FillBehavior="Stop">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0" BeginTime="0:0:0" Duration="0:0:2"/>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:2" Duration="0:0:0.4"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                        <Condition Binding="{Binding ElementName=PS5StoreButtonDummy, Path=IsFocused}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.Setters>
                                                        <Setter Property="Source" Value=""/>
                                                        <Setter Property="Opacity" Value="0"/>
                                                    </MultiDataTrigger.Setters>
                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard x:Name="FadeOutExploreTrue">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOutExploreTrue"/>
                                                    </MultiDataTrigger.ExitActions>
                                                </MultiDataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                                                        <Condition Binding="{Binding ElementName=PS5StoreButtonDummy, Path=IsFocused}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.Setters>
                                                        <Setter Property="Source" Value=""/>
                                                    </MultiDataTrigger.Setters>
                                                    <MultiDataTrigger.EnterActions>
                                                        <BeginStoryboard x:Name="FadeOutExploreFalse">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </MultiDataTrigger.EnterActions>
                                                    <MultiDataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOutExploreFalse"/>
                                                    </MultiDataTrigger.ExitActions>
                                                </MultiDataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=PS5ExploreButtonDummy, Path=IsFocused}" Value="True">
                                                    <Setter Property="Source" Value=""/>
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard x:Name="FadeOut2">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOut2"/>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=PS5MoreGamesButtonDummy, Path=IsFocused}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard x:Name="FadeOut3">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOut3"/>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </FadeImage.Style>
                                </FadeImage>
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/Background/PS5Overlay.png'}" RenderOptions.BitmapScalingMode="Fant">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Settings Fullscreen.EnableMainBackgroundImage}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Settings Fullscreen.MainBackgroundImageDarkAmount}" Value="0.0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=LoginButton, Path=IsChecked}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard FillBehavior="Stop">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0" BeginTime="0:0:0" Duration="0:0:2.5"/>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:2.5" Duration="0:0:0.4"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Grid>

                            <Grid x:Name="VideoBackgrounds" Tag="{DynamicResource MicroTrailerBackground}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <TextBlock Name="VideoPathMicro" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text">
                                                <Setter.Value>
                                                    <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                        <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                        <Binding Source="\ExtraMetadata\games\"/>
                                                        <Binding Path="SelectedGame.Id"/>
                                                        <Binding Source="\VideoMicroTrailer.mp4" />
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <MediaElement MediaElementBehaviors.Repeat="True" x:Name="VideoSourceBackgrounds" Stretch="UniformToFill" HorizontalAlignment="Center">
                                    <MediaElement.Style>
                                        <Style TargetType="MediaElement">
                                            <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPathMicro, Path=Text, NotifyOnTargetUpdated=True}"/>
                                            <Style.Triggers>
                                                <EventTrigger RoutedEvent="Binding.TargetUpdated">
                                                    <BeginStoryboard>
                                                        <Storyboard FillBehavior="Stop">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <DataTrigger Binding="{Binding ElementName=LoginButton, Path=IsChecked}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard FillBehavior="Stop">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0" BeginTime="0:0:0" Duration="0:0:2"/>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:2" Duration="0:0:0.4"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                    <Setter Property="MediaElement.Source" Value=" " />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=VideoBackgrounds, Path=Visibility}" Value="Collapsed">
                                                    <Setter Property="MediaElement.Source" Value=" "/>
                                                </DataTrigger>
                                                <Trigger Property="Visibility" Value="Collapsed">
                                                    <Setter Property="Source" Value=""/>
                                                </Trigger>
                                                <!--DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                    <Setter Property="MediaElement.Source" Value="" />
                                                </DataTrigger-->
                                            </Style.Triggers>
                                        </Style>
                                    </MediaElement.Style>
                                </MediaElement>
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/Background/PS5Overlay.png'}" RenderOptions.BitmapScalingMode="Fant">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Settings Fullscreen.MainBackgroundImageDarkAmount}" Value="0.0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=LoginButton, Path=IsChecked}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard FillBehavior="Stop">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0" BeginTime="0:0:0" Duration="0:0:2.5"/>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:2.5" Duration="0:0:0.4"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Grid>

                            <Grid x:Name="MoreGamesBackground">
                                <Grid.Style>
                                    <Style TargetType="Grid" >
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=PS5MoreGamesButtonDummy, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/Background/PS5Library.jpg'}" RenderOptions.BitmapScalingMode="Fant" />
                            </Grid>

                            <Grid x:Name="FakeStoreBackgroundItems">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=PS5StoreButtonDummy, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid x:Name="BackgroundItem1">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </Style>
                                    </Grid.Style>
                                    <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/FakeStore/Backgrounds/StoreItemBackground1.jpg'}" RenderOptions.BitmapScalingMode="Fant"/>
                                </Grid>
                                <Grid x:Name="BackgroundItem2">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=StoreItem2, Path=IsFocused}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOut"/>
                                                        <BeginStoryboard x:Name="FadeIn">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.4" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeIn"/>
                                                        <BeginStoryboard x:Name="FadeOut">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="0:0:0.4" Duration="0:0:0.3" FillBehavior="HoldEnd"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/FakeStore/Backgrounds/StoreItemBackground2.jpg'}" RenderOptions.BitmapScalingMode="Fant"/>
                                </Grid>
                                <Grid x:Name="BackgroundItem3">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=StoreItem3, Path=IsFocused}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOut"/>
                                                        <BeginStoryboard x:Name="FadeIn">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="0" To="1" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeIn"/>
                                                        <BeginStoryboard x:Name="FadeOut">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="1" To="0" Duration="0:0:0.3" FillBehavior="HoldEnd"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/FakeStore/Backgrounds/StoreItemBackground3.jpg'}" RenderOptions.BitmapScalingMode="Fant"/>
                                </Grid>
                                <Grid x:Name="BackgroundItem4">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=StoreItem4, Path=IsFocused}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOut"/>
                                                        <BeginStoryboard x:Name="FadeIn">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="0" To="1" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeIn"/>
                                                        <BeginStoryboard x:Name="FadeOut">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="1" To="0" Duration="0:0:0.3" FillBehavior="HoldEnd"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/FakeStore/Backgrounds/StoreItemBackground4.jpg'}" RenderOptions.BitmapScalingMode="Fant"/>
                                </Grid>
                                <Grid x:Name="BackgroundItem5">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=StoreItem5, Path=IsFocused}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOut"/>
                                                        <BeginStoryboard x:Name="FadeIn">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="0" To="1" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeIn"/>
                                                        <BeginStoryboard x:Name="FadeOut">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="1" To="0" Duration="0:0:0.3" FillBehavior="HoldEnd"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/FakeStore/Backgrounds/StoreItemBackground5.jpg'}" RenderOptions.BitmapScalingMode="Fant"/>
                                </Grid>
                                <Grid x:Name="BackgroundItem6">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Opacity" Value="0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=StoreItem6, Path=IsFocused}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeOut"/>
                                                        <BeginStoryboard x:Name="FadeIn">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="0" To="1" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <RemoveStoryboard BeginStoryboardName="FadeIn"/>
                                                        <BeginStoryboard x:Name="FadeOut">
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4" From="1" To="0" Duration="0:0:0.3" FillBehavior="HoldEnd"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                                <Trigger Property="Opacity" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/FakeStore/Backgrounds/StoreItemBackground6.jpg'}" RenderOptions.BitmapScalingMode="Fant"/>

                                </Grid>
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill"
                                       Source="{ThemeFile 'Images/PS5/Background/PS5Overlay.png'}" RenderOptions.BitmapScalingMode="Fant">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Settings Fullscreen.MainBackgroundImageDarkAmount}" Value="0.0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Grid>


                            <!--Store Grid-->
                            <Grid x:Name="StoreGrid" Grid.Row="0" Grid.RowSpan="2">
                                <Grid.Style>
                                    <Style TargetType="Grid" >
                                        <Setter Property="Opacity" Value="0"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding ElementName=PS5StoreButtonDummy, Path=IsFocused}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <MultiDataTrigger.EnterActions>
                                                    <RemoveStoryboard BeginStoryboardName="GridOff"/>
                                                    <BeginStoryboard x:Name="GridOn">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4" FillBehavior="HoldEnd"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.EnterActions>
                                                <MultiDataTrigger.ExitActions>
                                                    <RemoveStoryboard BeginStoryboardName="GridOn"/>
                                                    <BeginStoryboard x:Name="GridOff">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2" FillBehavior="Stop"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.ExitActions>
                                            </MultiDataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=PS5StoreButtonDummy, Path=IsChecked}" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <Trigger Property="Opacity" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid x:Name="StoreBackground1">
                                    <Grid.Style>
                                        <Style TargetType="Grid" >
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
