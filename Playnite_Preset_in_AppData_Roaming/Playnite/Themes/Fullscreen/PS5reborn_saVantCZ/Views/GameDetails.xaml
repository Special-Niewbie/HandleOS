<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                    
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type GameDetails}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GameDetails}">
                    <Grid Background="Transparent"
                          x:Name="PART_ViewHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}"
                          KeyboardNavigation.DirectionalNavigation="Contained"
                          KeyboardNavigation.TabNavigation="Cycle"
                          KeyboardNavigation.ControlTabNavigation="Cycle">
                        <Grid x:Name="TrailerMainGrid">
                            <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="ExtraMetadataLoader_VideoLoaderControl_NoControls_Sound" Focusable="False"/>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Resources>
                                        <Storyboard x:Key="FadeOn">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4" FillBehavior="HoldEnd"/>
                                        </Storyboard>
                                        <Storyboard x:Key="FadeOff">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.4" FillBehavior="HoldEnd"/>
                                        </Storyboard>
                                    </Style.Resources>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=PlayTrailer, Path=IsChecked}" Value="True"/>
                                                <Condition Binding="{Binding ElementName=PlayTrailer, Path=IsKeyboardFocusWithin}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger.Setters>
                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard Storyboard="{StaticResource FadeOn}"/>
                                            </MultiDataTrigger.EnterActions>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>

                        <Grid x:Name="ScreenshotsFullscreen" VerticalAlignment="Top" HorizontalAlignment="Left" Width="5760">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=ScreenshotsList, Path=SelectedIndex}" Value="0">
                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="FadeIn0">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <RemoveStoryboard BeginStoryboardName="FadeIn0"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ScreenshotsList, Path=SelectedIndex}" Value="1">
                                            <Setter Property="Margin" Value="-1920,0,0,0"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="FadeIn1">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <RemoveStoryboard BeginStoryboardName="FadeIn1"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ScreenshotsList, Path=SelectedIndex}" Value="2">
                                            <Setter Property="Margin" Value="-3840,0,0,0"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="FadeIn2">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <RemoveStoryboard BeginStoryboardName="FadeIn2"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <ListView x:Name="ScreenshotsListFull"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Tag="{DynamicResource FullscreenMediaScreenshots}"
                                                                              VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"  BorderBrush="Transparent" BorderThickness="0" Background="Transparent" 
                                                                              FocusVisualStyle="{x:Null}" Focusable="False" AlternationCount="100" KeyboardNavigation.DirectionalNavigation="Once" ItemsSource="{Binding ElementName=SteamScreenshots_SteamScreenshotsViewControl, Path=Content.ScreenshotsBitmapImages}">
                                <ListView.Style>
                                    <Style TargetType="ListView">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="Opacity" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBox}">
                                                    <ScrollViewer CanContentScroll="False" HorizontalScrollBarVisibility="Hidden">
                                                        <VirtualizingStackPanel x:Name="StackPanel" IsItemsHost="True" Orientation="Horizontal" HorizontalAlignment="Left"/>
                                                    </ScrollViewer>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                    <Condition Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible"/>
                                                    <Condition Binding="{Binding ElementName=ScreenshotsList, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <MultiDataTrigger.Setters>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger.Setters>
                                                <MultiDataTrigger.EnterActions>
                                                    <RemoveStoryboard BeginStoryboardName="FadeOut"/>
                                                    <BeginStoryboard x:Name="FadeIn">
                                                        <Storyboard FillBehavior="HoldEnd">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.EnterActions>
                                                <MultiDataTrigger.ExitActions>
                                                    <RemoveStoryboard BeginStoryboardName="FadeIn"/>
                                                    <BeginStoryboard x:Name="FadeOut">
                                                        <Storyboard FillBehavior="HoldEnd">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.ExitActions>
                                            </MultiDataTrigger>
                                            <Trigger Property="Opacity" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.Style>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Grid x:Name="ScreenshotItem" Width="1920" Height="1080">
                                                        <Image x:Name="Image" Stretch="UniformToFill"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="ListBox.AlternationIndex" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Source" TargetName="Image" Value="{Binding}"/>
                                                        </Trigger>
                                                        <Trigger Property="ListBox.AlternationIndex" Value="1">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Source" TargetName="Image" Value="{Binding}"/>
                                                        </Trigger>
                                                        <Trigger Property="ListBox.AlternationIndex" Value="2">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Source" TargetName="Image" Value="{Binding}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>

                        <Grid x:Name="VisualiserFullscreen" VerticalAlignment="Top" HorizontalAlignment="Left" Width="5760">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=ScreenshotVisualiserList, Path=SelectedIndex}" Value="0">
                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="FadeIn0">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <RemoveStoryboard BeginStoryboardName="FadeIn0"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ScreenshotVisualiserList, Path=SelectedIndex}" Value="1">
                                            <Setter Property="Margin" Value="-1920,0,0,0"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="FadeIn1">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <RemoveStoryboard BeginStoryboardName="FadeIn1"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ScreenshotVisualiserList, Path=SelectedIndex}" Value="2">
                                            <Setter Property="Margin" Value="-3840,0,0,0"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="FadeIn2">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <RemoveStoryboard BeginStoryboardName="FadeIn2"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <ListView x:Name="VisualiserListFull"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Tag="{DynamicResource FullscreenVisualiserScreenshots}"
                                                                              VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"  BorderBrush="Transparent" BorderThickness="0" Background="Transparent" 
                                                                              FocusVisualStyle="{x:Null}" Focusable="False" AlternationCount="100" KeyboardNavigation.DirectionalNavigation="Once" ItemsSource="{PluginSettings Plugin=ScreenshotsVisualizer, Path=ListScreenshots}">
                                <ListView.Style>
                                    <Style TargetType="ListView">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="Opacity" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBox}">
                                                    <ScrollViewer CanContentScroll="False" HorizontalScrollBarVisibility="Hidden">
                                                        <VirtualizingStackPanel x:Name="StackPanel" IsItemsHost="True" Orientation="Horizontal" HorizontalAlignment="Left"/>
                                                    </ScrollViewer>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True"/>
                                                    <Condition Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible"/>
                                                    <Condition Binding="{Binding ElementName=ScreenshotVisualiserList, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <MultiDataTrigger.Setters>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger.Setters>
                                                <MultiDataTrigger.EnterActions>
                                                    <RemoveStoryboard BeginStoryboardName="FadeOut"/>
                                                    <BeginStoryboard x:Name="FadeIn">
                                                        <Storyboard FillBehavior="HoldEnd">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.EnterActions>
                                                <MultiDataTrigger.ExitActions>
                                                    <RemoveStoryboard BeginStoryboardName="FadeIn"/>
                                                    <BeginStoryboard x:Name="FadeOut">
                                                        <Storyboard FillBehavior="HoldEnd">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </MultiDataTrigger.ExitActions>
                                            </MultiDataTrigger>
                                            <Trigger Property="Opacity" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.Style>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Grid x:Name="ScreenshotItem" Width="1920" Height="1080">
                                                        <Image x:Name="Image" Stretch="UniformToFill"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="ListBox.AlternationIndex" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Source" TargetName="Image" Value="{Binding FileName}"/>
                                                        </Trigger>
                                                        <Trigger Property="ListBox.AlternationIndex" Value="1">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Source" TargetName="Image" Value="{Binding FileName}"/>
                                                        </Trigger>
                                                        <Trigger Property="ListBox.AlternationIndex" Value="2">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Source" TargetName="Image" Value="{Binding FileName}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </Grid>

                        <StackPanel x:Name="SelectedRowLogic" Tag="{DynamicResource TrophiesForUninstalled}" Focusable="False">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Height" Value="100"/>
                                    <Style.Triggers>
                                        <!--These Multidata Triggers sets which Row is selected-->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=BottomTilesRow2, Path=IsKeyboardFocusWithin}" Value="False" />
                                                <Condition Binding="{Binding ElementName=BottomTilesRow3, Path=IsKeyboardFocusWithin}" Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Height" Value="0"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=BottomTilesRow2, Path=IsKeyboardFocusWithin}" Value="True" />
                                                <Condition Binding="{Binding ElementName=BottomTilesRow1, Path=Visibility}" Value="Collapsed" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Height" Value="1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=BottomTilesRow2, Path=IsKeyboardFocusWithin}" Value="True" />
                                                <Condition Binding="{Binding ElementName=BottomTilesRow1, Path=Visibility}" Value="Visible" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Height" Value="2"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=BottomTilesRow3, Path=IsKeyboardFocusWithin}" Value="True" />
                                                <Condition Binding="{Binding ElementName=BottomTilesRow1, Path=Visibility}" Value="Collapsed" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Height" Value="3"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=BottomTilesRow3, Path=IsKeyboardFocusWithin}" Value="True" />
                                                <Condition Binding="{Binding ElementName=BottomTilesRow1, Path=Visibility}" Value="Visible" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Height" Value="4"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                        </StackPanel>

                        <Grid x:Name="TrophiesMenu">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TrophiesButton, Path=IsChecked}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid x:Name="TrophiesBackground">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Opacity" Value="0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=TrophiesButton, Path=IsChecked}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard x:Name="TrophyOpacity">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2" FillBehavior="HoldEnd"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <RemoveStoryboard BeginStoryboardName="TrophyOpacity"/>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Uniform"
                                       Source="{ThemeFile 'Images/PS5/Background/PS5Background.png'}" RenderOptions.BitmapScalingMode="Fant" />
                            </Grid>
                            <StackPanel x:Name="TrophiesMenuTop" Margin="0,60,90,0"  Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">

                                <StackPanel Orientation="Vertical" Margin="0,10,35,0">
                                    <Image Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                                                               Source="{ThemeFile 'Images/PS5/Trophies/Platinum.png'}" Height="80" RenderOptions.BitmapScalingMode="Fant" >
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=SuccessStory, Path=Percent}" Value="100">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Margin="0,0,30,0">
                                    <TextBlock Margin="0,0,0,10" Text="{DynamicResource ProgressTrophies}" Opacity="0.8" VerticalAlignment="Bottom"  HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="26" />
                                    <TextBlock Margin="0,0,0,5" Text="{PluginSettings Plugin=SuccessStory, Path=Percent, StringFormat={}{0}%}" VerticalAlignment="Bottom"  HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32" />
                                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="5" Margin="0,0,0,0">
                                        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="110" Height="4" Fill="#35363b">
                                        </Rectangle>
                                        <Rectangle RenderTransformOrigin="0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="4" MinWidth="0" MaxWidth="100" Width="{PluginSettings Plugin=SuccessStory, Path=Percent}" Fill="#acadb2">
                                            <Rectangle.RenderTransform>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1"/>
                                            </Rectangle.RenderTransform>
                                        </Rectangle>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                                    <TextBlock Margin="0,0,0,10" Text="{DynamicResource EarnedTrophies}" Opacity="0.8" VerticalAlignment="Bottom"  HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="26" />
                                    <StackPanel Margin="0,0,0,9" Opacity="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                        <TextBlock Margin="0,0,0,0" Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked}" VerticalAlignment="Bottom"  HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32" />
                                        <TextBlock Margin="0,0,0,0" Text="/" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32" />
                                        <TextBlock Margin="0,0,0,0" Text="{PluginSettings Plugin=SuccessStory, Path=Total}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32" />

                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Margin="0,40,0,0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                                    <Image Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left"  
                                                                               Source="{ThemeFile 'Images/PS5/Trophies/Gold.png'}" Height="52" RenderOptions.BitmapScalingMode="Fant" />
                                    <TextBlock Margin="5,-6,0,6" Text="{Binding ElementName=AchGold, Path=SelectedItems.Count}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32" />
                                    <Image Margin="50,1,0,-1" VerticalAlignment="Bottom" HorizontalAlignment="Left"  
                                                                               Source="{ThemeFile 'Images/PS5/Trophies/Silver.png'}" Height="52" RenderOptions.BitmapScalingMode="Fant" />
                                    <TextBlock Margin="5,-6,0,6" Text="{Binding ElementName=AchSilver, Path=SelectedItems.Count}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32" />
                                    <Image Margin="50,2,0,-2" VerticalAlignment="Bottom" HorizontalAlignment="Left"  
                                                                               Source="{ThemeFile 'Images/PS5/Trophies/Bronze.png'}" Height="52" RenderOptions.BitmapScalingMode="Fant" />
                                    <TextBlock Margin="5,-6,0,6" Tag="{DynamicResource SeparatedTrophies}" Text="{Binding ElementName=AchBronze, Path=SelectedItems.Count}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Margin="5,-6,0,6" Tag="{DynamicResource SeparatedTrophies}" Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Light" FontSize="32">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock Margin="190,190,0,0" Foreground="White" FontSize="24" FontFamily="Segoe UI SemiLight" >
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{DynamicResource UnlockedTrophies}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=AchSwitch, Path=IsChecked}" Value="True">
                                                <Setter Property="Text" Value="{DynamicResource LockedTrophies}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <CheckBoxEx x:Name="AchSwitch" Margin="75,230,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                                <CheckBoxEx.Style>
                                    <Style TargetType="CheckBoxEx">
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="CheckBox">
                                                    <Grid Height="74" Width="74">
                                                        <Border x:Name="mask" Background="#16171b" CornerRadius="74"/>
                                                        <Grid>
                                                            <Grid.OpacityMask>
                                                                <VisualBrush Visual="{Binding ElementName=mask}"/>
                                                            </Grid.OpacityMask>
                                                        </Grid>

                                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="WhiteIcon" Text="&#xec80;" Foreground="White" FontSize="32" FontFamily="{StaticResource FontIcoFont}"/>
                                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="DarkIcon" Visibility="Collapsed" Text="&#xec80;" Foreground="#16171b" FontSize="32" FontFamily="{StaticResource FontIcoFont}"/>

                                                        <Border x:Name="MainBorder" Opacity="1" BorderThickness="3" CornerRadius="48" Margin="-6" Style="{DynamicResource PS5Border}" Visibility="Hidden" Tag="False">
                                                            <Border.CacheMode>
                                                                <BitmapCache EnableClearType="False" 
                                                 RenderAtScale="1" 
                                                 SnapsToDevicePixels="False"/>
                                                            </Border.CacheMode>
                                                        </Border>
