<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="CheckBox">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Padding" Value="5,5,12,5" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="BorderAnim">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BorderFocus" From="0" To="1" Duration="0:0:0.15" FillBehavior="Stop"/>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Grid Background="Transparent">
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Background="{DynamicResource ThemeButtonNoFocus}"
                                    VerticalAlignment="Center"
                                    BorderThickness="2" BorderBrush="{DynamicResource UserThemeColor}"
                                    Grid.Column="0" CornerRadius="24" Margin="0,0,10,0" Width="24" Height="24">
                                <Viewbox x:Name="CheckIcon" Visibility="Collapsed">
                                    <TextBlock Text="b" FontFamily="Marlett" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Viewbox>
                            </Border>
                            <TextBlock FontSize="22"
                                        FontFamily="Bahnschrift Light"
                                        Foreground="White"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Grid.Column="1" TextTrimming="WordEllipsis">
                                <ContentPresenter RecognizesAccessKey="True" />
                            </TextBlock>
                        </Grid>
                        <Border x:Name="BorderFocus" Margin="-8.1"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                BorderBrush="{DynamicResource UserThemeColor}"
                                BorderThickness="4.9" Visibility="Hidden" CornerRadius="8" />

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Visibility" Value="Visible" TargetName="CheckIcon" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ControlBackgroundDarkBrush}" />
                            <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ControlBackgroundDarkBrush}" />
                            <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="MoreGamesButton" TargetType="CheckBox">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundGradient}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="IsChecked" Value="True"/>
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Tag" Value="{DynamicResource StoreButton}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=Top1, Path=IsChecked}" Value="True">
                <Setter Property="IsChecked" Value="False"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <ControlTemplate.Resources>
                                <Storyboard x:Key="BorderAnim">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BorderFocus" From="0" To="1" Duration="0:0:0.15" FillBehavior="Stop"/>
                                </Storyboard>
                            </ControlTemplate.Resources>
                            <Border BorderBrush="Transparent" CornerRadius="8">
                                <Grid  Height="225"  Width="400" >
                                    <Border Name="mask" Background="{TemplateBinding Background}" CornerRadius="8"/>
                                    <Grid>
                                        <Grid.OpacityMask>
                                            <VisualBrush Visual="{Binding ElementName=mask}"/>
                                        </Grid.OpacityMask>
                                        <Grid x:Name="BrowseGames" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,0">
                                            <Grid>
                                                <ListBoxEx x:Name="MoreGamesGrid"
                                                                                                    Focusable="False"
                                                                                                    Background="Transparent" 
								                                                                    BorderThickness="0"
                                                                                                    VirtualizingPanel.IsContainerVirtualizable="True"     
                                                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                                                    VirtualizingPanel.ScrollUnit="Item" 
                                                                                                    VirtualizingPanel.VirtualizationMode="Recycling"     
                                                                                                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"                                               
                                                                                                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                                                                    Height="225"
                                                                                                    Width="400"
                                                                                                    HorizontalContentAlignment="Center"                                    
                                                                                                    AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}"
                                                                                                    ItemsSource="{Binding ElementName=PART_ListGameItems, Path=ItemsSource}">
                                                    <ListBoxEx.ItemContainerStyle>
                                                        <Style TargetType="ListBoxItem">
                                                            <Setter Property="Background" Value="Transparent" />
                                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                                            <Setter Property="SnapsToDevicePixels" Value="True" />
                                                            <Setter Property="VerticalAlignment" Value="Top" />
                                                            <Setter Property="Focusable" Value="False"/>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Setter Property="Opacity" Value="1"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ListBoxItem">
                                                                        <Grid Margin="0,0,-125,0">
                                                                            <StackPanel>
                                                                                <Image RenderOptions.BitmapScalingMode="Fant" MaxHeight="225" Width="225" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="{Settings CoverArtStretch}">
                                                                                    <Image.Effect>
                                                                                        <DropShadowEffect ShadowDepth="5" BlurRadius="50" Direction="180"/>
                                                                                    </Image.Effect>
                                                                                    <Image.Source>
                                                                                        <PriorityBinding>
                                                                                            <Binding Path="CoverImageObject" Mode="OneWay" Converter="{StaticResource NullToDependencyPropertyUnsetConverter}"/>
                                                                                            <Binding Path="DefaultCoverImageObject" Mode="OneWay" />
                                                                                        </PriorityBinding>
                                                                                    </Image.Source>
                                                                                </Image>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="ListBox.AlternationIndex" Value="9">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </Trigger>
                                                                            <Trigger Property="ListBox.AlternationIndex" Value="10">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </Trigger>
                                                                            <Trigger Property="ListBox.AlternationIndex" Value="11">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </Trigger>
                                                                            <Trigger Property="ListBox.AlternationIndex" Value="12">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ListBoxEx.ItemContainerStyle>
                                                    <ListBoxEx.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                                                        </ItemsPanelTemplate>
                                                    </ListBoxEx.ItemsPanel>
                                                </ListBoxEx>
                                            </Grid>
                                            <Border Height="225" Width="400" Opacity="0.3" VerticalAlignment="Bottom" Background="{DynamicResource ThemeDarkOverlay}">
                                                <Border.OpacityMask>
                                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                                                        <GradientStop Color="Transparent" Offset="0"/>
                                                        <GradientStop Color="Black" Offset="0.9"/>
                                                        <GradientStop Color="Black" Offset="1.0"/>
                                                    </LinearGradientBrush>
                                                </Border.OpacityMask>
                                            </Border>
                                            <TextBlock Margin="28,0,0,17" Foreground="White" VerticalAlignment="Bottom" Text="Browse your games" FontFamily="Segoe UI Semilight" Opacity="0.8" FontSize="26" />
                                            <Image Margin="0,0,0,25" VerticalAlignment="Center" HorizontalAlignment="Center" Height="55" RenderOptions.BitmapScalingMode="Fant" Source="{ThemeFile 'Images/Xbox/GamePad.png'}">
                                                <Image.Effect>
                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="20"/>
                                                </Image.Effect>

                                            </Image>
                                        </Grid>
                                        <Grid x:Name="StoreGames" Visibility="Collapsed" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,0">
                                            <Grid>
                                                <Image RenderOptions.BitmapScalingMode="Fant" Stretch="Fill" Source="{ThemeFile 'Images/Xbox/StoreDash.png' }" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                            </Grid>
                                            <Border Height="225" Width="400" Opacity="0.3" VerticalAlignment="Bottom" Background="{DynamicResource ThemeDarkOverlay}">
                                                <Border.OpacityMask>
                                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                                                        <GradientStop Color="Transparent" Offset="0"/>
                                                        <GradientStop Color="Black" Offset="0.9"/>
                                                        <GradientStop Color="Black" Offset="1.0"/>
                                                    </LinearGradientBrush>
                                                </Border.OpacityMask>
                                            </Border>
                                            <TextBlock Margin="28,0,0,17" Foreground="White" VerticalAlignment="Bottom" Text="Browse the store" FontFamily="Segoe UI Semilight" Opacity="0.8" FontSize="26" />
                                            <Image Margin="0,0,0,25" VerticalAlignment="Center" HorizontalAlignment="Center" Height="55" RenderOptions.BitmapScalingMode="Fant" Source="{ThemeFile 'Images/Xbox/MStoreDash.png'}"/>
                                        </Grid>

                                    </Grid>

                                    <Border x:Name="BorderFocus" Margin="-8.1" CornerRadius="8"
                                BorderBrush="{DynamicResource UserThemeColor}"
                                BorderThickness="4.9" Visibility="Hidden">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0" Opacity="1" 
                                                  Color="{DynamicResource ThemeColor}"                                                  
                                                  RenderingBias="Performance" BlurRadius="5"/>
                                        </Border.Effect>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" TargetName="BrowseGames"/>
                                    <Setter Property="Visibility" Value="Visible" TargetName="StoreGames"/>
                                </DataTrigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="False">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <ControlTemplate.Resources>
                                <Storyboard x:Key="BorderAnim">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BorderFocus" From="0" To="1" Duration="0:0:0.15" FillBehavior="Stop"/>
                                </Storyboard>
                            </ControlTemplate.Resources>
                            <Border BorderBrush="Transparent" CornerRadius="30">
                                <Grid Height="60" Margin="0,0,0,0" Width="335">
                                    <Border Background="{DynamicResource ThemeButtonNoFocus}" CornerRadius="30" Name="mask"/>
                                    <Grid>
                                        <Grid.OpacityMask>
                                            <VisualBrush Visual="{Binding ElementName=mask}"/>
                                        </Grid.OpacityMask>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" Style="{DynamicResource TextBlockBaseStyle}" />
                                            <TextBlock x:Name="PlayText" Style="{DynamicResource TextBlockBaseStyle}"
                                   Foreground="{TemplateBinding Foreground}" FontSize="26" FontFamily="Bahnschrift Light"
                                   HorizontalAlignment="Left" Margin="30,3,0,0"
                                   VerticalAlignment="Center" Text="{StaticResource LOCBackLabel}">
                                            </TextBlock>
                                        </StackPanel>
                                        <Border x:Name="BorderFocus" Margin="-8.1"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                BorderBrush="{DynamicResource UserThemeColor}"
                                BorderThickness="4.9" CornerRadius="35" Visibility="Hidden">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0" Opacity="1" 
                                                  Color="{DynamicResource ThemeColor}"                                                  
                                                  RenderingBias="Performance" BlurRadius="5"/>
                                            </Border.Effect>
                                        </Border>

                                    </Grid>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Opacity" Value="1" />
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Setter Property="Background" TargetName="mask"  Value="{DynamicResource ThemeButtonFocus}"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Setter Property="Background" TargetName="mask" Value="{DynamicResource ThemeButtonFocus}"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DashItem1" TargetType="CheckBox">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundGradient}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=DashItem1, Path=IsChecked}" Value="True">
                <Setter Property="Margin" Value="540,0,0,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <ControlTemplate.Resources>
                                <Storyboard x:Key="BorderAnim">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BorderFocus" From="0" To="1" Duration="0:0:0.15" FillBehavior="Stop"/>
                                </Storyboard>
                            </ControlTemplate.Resources>
                            <Border BorderBrush="Transparent" CornerRadius="8">
                                <Grid  Height="225"  Width="400" >
                                    <Border Name="mask" Background="{TemplateBinding Background}" CornerRadius="8"/>
                                    <Grid>
                                        <Grid.OpacityMask>
                                            <VisualBrush Visual="{Binding ElementName=mask}"/>
                                        </Grid.OpacityMask>
                                        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,0">
                                            <Grid>
                                                <Image RenderOptions.BitmapScalingMode="Fant" Stretch="Fill" Source="{ThemeFile 'Images/Xbox/AchievementDash.png' }" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                                            </Grid>
                                            <Border Height="225" Width="400" Opacity="0.3" VerticalAlignment="Bottom" Background="{DynamicResource ThemeDarkOverlay}">
                                                <Border.OpacityMask>
                                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                                                        <GradientStop Color="Transparent" Offset="0"/>
                                                        <GradientStop Color="Black" Offset="0.9"/>
                                                        <GradientStop Color="Black" Offset="1.0"/>
                                                    </LinearGradientBrush>
                                                </Border.OpacityMask>
                                            </Border>
                                            <TextBlock x:Name="Icon"  Margin="0,0,0,25" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="&#127942;" FontFamily="Segoe UI Symbol" FontSize="55" />
                                            <TextBlock x:Name="Text1"  Tag="{PluginSettings Plugin=SuccessStory, Path=HasData}" Margin="28,0,0,17" Foreground="White" VerticalAlignment="Bottom" Text="{DynamicResource LOCSuccessStoryAchievements}" FontFamily="Segoe UI Semilight" Opacity="0.8" FontSize="26" />
                                            <TextBlock x:Name="Text2" Margin="28,0,0,17" Foreground="White" VerticalAlignment="Bottom" Text="Achievements" FontFamily="Segoe UI Semilight" Opacity="0.8" FontSize="26" />
                                        </Grid>

                                    </Grid>

                                    <Border x:Name="BorderFocus" Margin="-8.1" CornerRadius="8"
                                BorderBrush="{DynamicResource UserThemeColor}"
                                BorderThickness="4.9" Visibility="Hidden">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0" Opacity="1" 
                                                  Color="{DynamicResource ThemeColor}"                                                  
                                                  RenderingBias="Performance" BlurRadius="5"/>
                                        </Border.Effect>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding ElementName=Text1, Path=Tag}" Value="False">
                                    <Setter Property="Visibility" TargetName="Text1" Value="Collapsed" />
                                    <Setter Property="Visibility" TargetName="Text2" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=Text1, Path=Tag}" Value="True">
                                    <Setter Property="Visibility" TargetName="Text1" Value="Visible" />
                                    <Setter Property="Visibility" TargetName="Text2" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=Text1, Path=Tag}" Value="False">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=DashItem1, Path=IsChecked}" Value="False">
                <Setter Property="Margin" Value="55,150,0,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <ControlTemplate.Resources>
                                <Storyboard x:Key="BorderAnim">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BorderFocus" From="0" To="1" Duration="0:0:0.15" FillBehavior="Stop"/>
                                </Storyboard>
                            </ControlTemplate.Resources>
                            <Border BorderBrush="Transparent" CornerRadius="30">
                                <Grid Height="60" Margin="0,0,0,0" Width="335">
                                    <Border Background="{DynamicResource ThemeButtonNoFocus}" CornerRadius="30" Name="mask"/>
                                    <Grid>
                                        <Grid.OpacityMask>
                                            <VisualBrush Visual="{Binding ElementName=mask}"/>
                                        </Grid.OpacityMask>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" Style="{DynamicResource TextBlockBaseStyle}" />
                                            <TextBlock x:Name="PlayText" Style="{DynamicResource TextBlockBaseStyle}"
                                   Foreground="{TemplateBinding Foreground}" FontSize="26" FontFamily="Bahnschrift Light"
                                   HorizontalAlignment="Left" Margin="30,3,0,0"
                                   VerticalAlignment="Center" Text="{StaticResource LOCBackLabel}">
                                            </TextBlock>
                                        </StackPanel>
                                        <Border x:Name="BorderFocus" Margin="-8.1"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                BorderBrush="{DynamicResource UserThemeColor}"
                                BorderThickness="4.9" CornerRadius="35" Visibility="Hidden">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="0" Opacity="1" 
                                                  Color="{DynamicResource ThemeColor}"                                                  
                                                  RenderingBias="Performance" BlurRadius="5"/>
                                            </Border.Effect>
                                        </Border>

                                    </Grid>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Opacity" Value="1" />
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Setter Property="Background" TargetName="mask"  Value="{DynamicResource ThemeButtonFocus}"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Setter Property="Background" TargetName="mask" Value="{DynamicResource ThemeButtonFocus}"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="DashItem2" TargetType="CheckBox">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundGradient}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="BorderAnim">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BorderFocus" From="0" To="1" Duration="0:0:0.15" FillBehavior="Stop"/>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Border BorderBrush="Transparent" CornerRadius="8">
                        <Grid  Height="225"  Width="400" >
                            <Border Name="mask" Background="{TemplateBinding Background}" CornerRadius="8"/>
                            <Grid>
                                <Grid.OpacityMask>
                                    <VisualBrush Visual="{Binding ElementName=mask}"/>
                                </Grid.OpacityMask>
                                <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,0">
                                    <Grid>
                                        <TextBlock Name="VideoPathMicro" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text">
                                                        <Setter.Value>
                                                            <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                                                                <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                <Binding Source="\ExtraMetadata\games\"/>
                                                                <Binding Path="SelectedGame.Id"/>
                                                                <Binding Source="\VideoMicroTrailer.mp4" />
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <FadeImage ClipToBounds="True" Source="{Binding SelectedGame.BackgroundImage}" HorizontalAlignment="Center"  RenderOptions.BitmapScalingMode="Fant" SourceUpdateDelay="50" Stretch="UniformToFill"/>
                                        <MediaElement MediaElementBehaviors.Repeat="True" x:Name="VideoSourceBackgrounds" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Center">
                                            <MediaElement.Style>
                                                <Style TargetType="MediaElement">
                                                    <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPathMicro, Path=Text}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                            <Setter Property="MediaElement.Source" Value="" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="False">
                                                            <Setter Property="MediaElement.Source" Value=""/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </MediaElement.Style>
                                        </MediaElement>
                                        <Border Height="30" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#B3000000" CornerRadius="4">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Margin="7,0,0,0" Source="{ThemeFileBinding SelectedGame.Source.Name, PathFormat='Images/SourcesDash/{0}.png'}" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant"/>
                                                <TextBlock  Margin="5,0,10,2" FontFamily="Segoe UI Semilight" Foreground="White"
                                               Text="{Binding SelectedGame.Source}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20"/>
                                            </StackPanel>
