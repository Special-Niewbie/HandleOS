                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                BorderBrush="{DynamicResource UserThemeColor}"
                                BorderThickness="4" Visibility="Hidden">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Opacity="1" 
                                                  Color="{DynamicResource ThemeColor}"                                                  
                                                  RenderingBias="Performance" BlurRadius="20"/>
                                    </Border.Effect>
                                </Border>

                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderEnable" />
                                    <Setter Property="Background" Value="{DynamicResource ThemeButtonNoFocus}"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Setter Property="Visibility" Value="Hidden" TargetName="BorderEnable" />
                                    <Setter Property="Background" Value="{DynamicResource UserThemeColor}"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Visibility" Value="Visible" TargetName="BorderFocus" />
                                    <Setter Property="Visibility" Value="Hidden" TargetName="BorderEnable" />
                                    <Setter Property="Background" Value="{DynamicResource UserThemeColor}"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard Storyboard="{StaticResource BorderAnim}"/>
                                    </Trigger.EnterActions>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=ManageButton, Path=IsChecked}" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <ControlTemplate.Resources>
                                <Storyboard x:Key="BorderAnim">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BorderFocus" From="0" To="1" Duration="0:0:0.15" FillBehavior="Stop"/>
                                </Storyboard>
                            </ControlTemplate.Resources>
                            <Border BorderBrush="Transparent" CornerRadius="30">
                                <Grid Height="60" Margin="0,0,0,0" Width="335">
                                    <Border Background="{DynamicResource ThemeButtonNoFocus}" CornerRadius="30" Name="mask"/>
                                    <Grid>
                                        <Grid.OpacityMask>
                                            <VisualBrush Visual="{Binding ElementName=mask}"/>
                                        </Grid.OpacityMask>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="20,0,0,0" VerticalAlignment="Center" Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" Style="{DynamicResource TextBlockBaseStyle}" />
                                            <TextBlock x:Name="PlayText" Style="{DynamicResource TextBlockBaseStyle}"
                                   Foreground="{TemplateBinding Foreground}" FontSize="26" FontFamily="Bahnschrift Light"
                                   HorizontalAlignment="Left" Margin="30,3,0,0"
                                   VerticalAlignment="Center" Text="{StaticResource LOCBackLabel}">
                                            </TextBlock>
                                        </StackPanel>
                                        <Border x:Name="BorderFocus" Margin="-8.1"
